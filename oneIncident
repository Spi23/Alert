# -*-coding:UTF-8 -*-

import smtplib

#Fonction d'envoie d'email depuis le serveur de messagerie exchange avec une config. SMTP.

#incident alert 80%
def envoi_oneinc():
	fromaddr = 'yourMail@mail.com'
	toaddrs = ['xxxx@mail.com', 'zzzz@mail.com']
	sujet = "Alerte GLPI"
	message = u"""\
	My message
	"""
	param = """\
	From: %s\r\n\
	To: %s\r\n\
	Subject: %s\r\n\
	\r\n\
	%s
	"""
	msg = param % (fromaddr, ", ".join(toaddrs), sujet, message)
	server = smtplib.SMTP()
	#server.set_debuglevel(1)		#Décommenter cette ligne afin d'activer la fonction de débug
	server.connect('SMTP Server Adress', Port)		#Connexion au serveur smtp
	server.helo()
	server.sendmail(fromaddr, toaddrs, msg)		#Envoi de l'email
	server.quit()		#Déconnexion au serveur
